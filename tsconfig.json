{
  "compilerOptions": {
    "esModuleInterop": true,
    "noEmitOnError": false,
    "noUnusedParameters": true,
    "noUnusedLocals": true,
    "declaration": true,
    "removeComments": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitReturns": true,
    "strict": true,
    "skipLibCheck": false,
    "importHelpers": true,

    "lib": ["es2016"],
    "target": "es5",
    "module": "commonjs",
    "rootDir": "src",
    "outDir": "build",
    "moduleResolution": "node"
  },
  "include": [
    "src/**/*.ts"
  ]
}
